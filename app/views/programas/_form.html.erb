<%= simple_form_for [@centro,@programa], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nombre %>
  
  <div class="form-actions">
    <%= f.button :submit, 'Crear Programa', :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.Cancelar")),
                programas_path, :class => 'btn' %>
  </div>
<% end %>
