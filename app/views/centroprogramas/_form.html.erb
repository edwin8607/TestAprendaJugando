<%= simple_form_for @centroprograma, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :centro_id %>
  <%= f.input :programa_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                centroprogramas_path, :class => 'btn' %>
  </div>
<% end %>
