<%= simple_form_for [@ficha,@estudiante], :html => { :class => 'form-horizontal' } do |f| %>
  
  <%= f.input :nombres %>
  <%= f.input :apellidos %>
  <%= f.input :cedula %>
  <div class="container">
  Masculino: <%= f.radio_button(:sexo,true) %>
  Femenino: <%= f.radio_button(:sexo,false) %>
  </div>

 <%= f.input :email %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                ficha_estudiantes_path(@ficha), :class => 'btn' %>
  </div>
<% end %>
