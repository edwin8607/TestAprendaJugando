<%- model_class = Ficha -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:numeroficha) %>:</strong></dt>
  <dd><%= @ficha.numeroficha %></dd>
  <dt><strong><%= model_class.human_attribute_name(:programa_id) %>:</strong></dt>
  <dd><%= @ficha.programa.nombre %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.Atras")),
              programa_fichas_path(@programa), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.Editar")),
              edit_programa_ficha_path(@programa,@ficha), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.Eliminar")),
              programa_ficha_path(@programa,@ficha),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.Confirmar", :default => 'Esta seguro?')) },
              :class => 'btn btn-danger' %>
</div>
